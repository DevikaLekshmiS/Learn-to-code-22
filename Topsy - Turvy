#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int a,i;
    int sum1=0,sum2=0;
    float ans;
    scanf("%d",&a);
    for(i=0;i<a;i++)
        {
         sum1=sum1+(i*(i+1));
        }
         printf("%d\n",sum1);
    for(i=0;i<a;i++)
        {
         sum2=sum2+(i+(i+1));
        }
    printf ("%d\n",sum2);
    ans=sum1/sum2;
    printf("%.2f\n",ans);

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
